<h2 class="spec-reminder-card--title">{{model.title}}</h2>
<p class="spec-reminder-card--date">{{model.date}}</p>
<p>{{model.notes}}</p>
{{#link-to "reminders.reminder-card.edit"}}
  <button class="spec-reminder-card--editbtn">edit</button>
{{/link-to}}
{{#link-to "reminders"}}
  <button
    class='spec-reminder--deletebtn'
    {{action 'removeReminder' model on="click"}}>
    delete
  </button>
{{/link-to}}
{{outlet}}
